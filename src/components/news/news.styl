@import "~assets/stylus/variable"

/* news title 部分*/
html
  body
    .scroll-wrapper
      position: fixed
      top: 50px
      bottom: 0
      width: 100%
      .img-place-holder
        position: relative
        .news-title
          position: absolute;
          bottom: 12%;
          left: 5%;
          width: 75%;
          font-size: 18px;
          color: $color-text-ll
        .news-source
          position: absolute;
          bottom: 4%;
          right: 3%;
          width: 90%;
          text-align: right
          font-size: 12px;
          color: $color-text-ll
        .news-layer
          width: 100%;
          height: 100%;
          background: linear-gradient(0deg, rgba(0, 0, 0, .6), transparent 60%);