@import "~assets/stylus/variable"

.list-scroll
  position: fixed
  top: 50px
  bottom: 0
  width: 100%
  background: $color-background
  .slider-wrapper
    position: relative
    padding-top: 61%
    width: 100%
    height: 0
    overflow: hidden
    .slider-content
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
  .list-loading
    display: none

.loading-wrapper
  position: absolute
  width: 100%
  top: 50%
  transform: translateY(-50%)

.sidebar-wrapper
  display: none
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: $z-index-medium
  transition: all 0.2s ease
  .sidebar
    transition: all 0.2s linear
    transform: translate3d(-100%, 0, 0)
