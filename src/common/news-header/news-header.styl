@import "~assets/stylus/variable"

.header
  display flex
  position: fixed
  top: 0
  right: 0
  left: 0
  width: 100%
  height: 50px
  background: $color-theme
  color: $color-text-ll
  z-index: 999;
  i
    font-size 28px
  .icon-share,
  .icon-favorite,
  .comment,
  .like
    position: absolute
    top: 50%
    transform: translate3d(0, -50%, 0)
  .icon-next
    position: absolute
    top: 50%
    left: 10px
    width: 28px
    height: 28px
    transform: rotate(180deg) translate3d(0, 50%, 0)
    box-sizing: border-box
  .icon-share
    right: 180px
  .icon-favorite
    right: 140px
    font-size 34px
  .comment
    right: 80px
  .like
    right: 20px