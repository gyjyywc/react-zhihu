@import "~assets/stylus/variable"

.content-common
  display: flex
  position: absolute
  top: 10px
  height: 30px
  line-height: 30px
  align-items: center
  color: $color-text-ll

.sidebar
  width: 80%
  height: 100%
  background: $color-background
  .side-header
    display: flex
    align-items: center
    height: 50px
    background: $color-theme
    img
      display: inline-block
      margin: 0 10px 0 20px
      width: 34px
      height: 34px
      border-radius: 50%
    em
      color: $color-text-ll
  .side-nav
    position: relative
    height: 50px
    background: $color-theme
    .left-content
      @extend .content-common
      left: 15px
      i
        font-size: 34px
    .right-content
      @extend .content-common
      right: 15px
      i
        font-size 28px
        margin-right: 5px
  .side-home
    display: flex
    height: 50px
    line-height: 50px
    align-items: center
    color: $color-icon-d
    background: $color-background-l
    .icon-home
      margin: 0 15px
      font-size: 28px
    em
      font-size: $font-size-large-s
  .side-scroll
    position: fixed
    top: 150px
    bottom: 0
    width: 100%
    box-sizing: border-box
    overflow: hidden;
    li
      position: relative
      padding: 0 30px 0 15px
      width: 100%
      height: 50px
      line-height: 50px
      box-sizing: border-box
      i
        position: absolute
        top: 15px
        right: 40px;
        font-size: $font-size-large
        color: $color-icon-l
