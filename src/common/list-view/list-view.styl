@import "~assets/stylus/variable"

.list-wrapper
  padding: 1.5%
  background: $color-background
  .list-date
    padding: 10px 5px;
    color: $color-text-l
    font-size: $font-size-medium
  .list-item
    display: flex
    margin: 1.5% 0
    padding: 3% 4%
    width: 100%
    height: 90px
    border-radius: 3px
    box-sizing: border-box
    background: $color-background-l
    em
      flex: 1
      margin-right: 20px
      line-height: 1.2em
      font-size: $font-size-large-s
    img
      flex: 0 0 70px
      width: 70px