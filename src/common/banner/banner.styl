@import "~assets/stylus/variable"

.slider
  position: relative
  min-height: 1px
  .slider-group
    overflow: hidden
    .slider-item
      float: left
      background: linear-gradient(0deg, rgba(0, 0, 0, .6), transparent 60%);
      overflow: hidden
      box-sizing: border-box
      a
        display: block
        position: relative
        width: 100%
        height: 100%
        overflow: hidden
        text-decoration: none
        img
          position: relative
          top: 50%
          right: 0
          left: 0
          width: 100%
          transform: translate3d(0, -50%, 0)
          z-index: -1
        em
          position: absolute
          bottom: 30px
          right: 15px
          left: 15px
          font-size: $font-size-large
          color: $color-text-ll
  .dots
    position: absolute
    right: 0
    bottom: 12px
    left: 0
    text-align: center
    font-size: 0
    .dot
      display: inline-block
      margin: 0 4px
      width: 8px
      height: 8px
      border-radius: 50%
      background: $color-dot-d
      &.active
        width: 15px
        border-radius: 5px
        background: $color-dot-l