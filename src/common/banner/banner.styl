@import "~assets/stylus/variable"

.slider
  position: relative
  min-height: 1px
  .slider-group
    overflow: hidden
    white-space: nowrap
    .slider-item
      float: left
      overflow: hidden
      box-sizing: border-box
      a
        display: block
        width: 100%
        overflow: hidden
        text-decoration: none
      &.pic
        width: 100%
        height: 100%
        overflow: hidden
        background-size: cover
        background-repeat: no-repeat
        background-position: center
        box-sizing: border-box
        em
          color: $color-text-ll
  .dots
    position: absolute
    right: 0
    bottom: 12px
    left: 0
    text-align: center
    font-size: 0
    .dot
      display: inline-block
      margin: 0 4px
      width: 8px
      height: 8px
      border-radius: 50%
      background: $color-dot-d
      &.active
        width: 15px
        border-radius: 5px
        background: $color-dot-l